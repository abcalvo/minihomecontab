<div id="mycontent">
	<% if @passbooks.count == 0 %>
		<%= "<h2>No hay datos</h2>" %>
	<% else %>
		<table class="table table-hover table-condensed">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th>Libreta</th>
				</tr>
			</thead>
			<tbody>
	      <% @passbooks.each do |passbook| %>
	      	<tr>
	      		<td class="icon"><a href=<%= "/passbook/remove/" + passbook.id.to_s %> title="Eliminar libreta" class="deletePassbook"><span class="glyphicon glyphicon-remove"></span></a></td>
	      		<td class="icon"><a href=<%= "/passbook/edit/" + passbook.id.to_s %> title="Editar libreta" class="editPassbook"><span class="glyphicon glyphicon-pencil"></span></td>
		      	<td class="passbook"><%= passbook.name %></td>
	      	</tr>
	      <% end %>
			</tbody>
		</table>
	<% end %>

	<a href="/passbook/new" title="Añadir libreta" class="addPassbook"><span class="glyphicon glyphicon-plus"></span> Añadir libreta</a>
</div>
