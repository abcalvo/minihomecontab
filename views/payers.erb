<div id="mycontent">
	<% if @payers.count == 0 %>
		<%= "<h2>No hay datos</h2>" %>
	<% else %>
		<table class="table table-hover table-condensed">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th>Pagador</th>
				</tr>
			</thead>
			<tbody>
	      <% @payers.each do |payer| %>
	      	<tr>
	      		<td class="icon"><a href=<%= "/payer/remove/" + payer.id.to_s %> title="Eliminar pagador" class="deletePayer"><span class="glyphicon glyphicon-remove"></span></a></td>
	      		<td class="icon"><a href=<%= "/payer/edit/" + payer.id.to_s %> title="Editar pagador" class="editPayer"><span class="glyphicon glyphicon-pencil"></span></td>
		      	<td class="payer"><%= payer.name %></td>
	      	</tr>
	      <% end %>
			</tbody>
		</table>
	<% end %>

	<a href="/payer/new" title="Añadir pagador" class="addPayer"><span class="glyphicon glyphicon-plus"></span> Añadir pagador</a>
</div>
