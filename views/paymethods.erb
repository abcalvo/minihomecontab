<div id="mycontent">
	<% if @paymethods.count == 0 %>
		<%= "<h2>No hay datos</h2>" %>
	<% else %>
		<table class="table table-hover table-condensed">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th>Libreta</th>
				</tr>
			</thead>
			<tbody>
	      <% @paymethods.each do |paymethod| %>
	      	<tr>
	      		<td class="icon"><a href=<%= "/paymethod/remove/" + paymethod.id.to_s %> title="Eliminar método de pago" class="deletePaymethod"><span class="glyphicon glyphicon-remove"></span></a></td>
	      		<td class="icon"><a href=<%= "/paymethod/edit/" + paymethod.id.to_s %> title="Editar método de pago" class="editPaymethod"><span class="glyphicon glyphicon-pencil"></span></td>
		      	<td class="paymethod"><%= paymethod.name %></td>
	      	</tr>
	      <% end %>
			</tbody>
		</table>
	<% end %>

	<a href="/paymethod/new/" title="Añadir método de pago" class="addPaymethod"><span class="glyphicon glyphicon-plus"></span> Añadir método de pago</a>
</div>
